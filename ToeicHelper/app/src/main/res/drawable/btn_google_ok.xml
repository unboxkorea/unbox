<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:exitFadeDuration="180">
    <item
        android:state_pressed="true">
        <shape>
            <solid
                android:color="@color/ThemeDarkRed"/>
        </shape>
    </item>

    <item
        android:state_pressed="false">
        <shape>
            <solid
                android:color="@color/ThemeRed"/>
        </shape>
    </item>

</selector>