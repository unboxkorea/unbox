<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dip"
    android:layout_marginLeft="10dip"
    android:layout_marginRight="10dip"
    app:cardCornerRadius="5dp"
    app:cardBackgroundColor="@color/ThemeWhite">

    <com.balysv.materialripple.MaterialRippleLayout
        android:id="@+id/ripplelayLoginedToeicTest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:rippleColor="@color/ThemeBlack"
        app:rippleAlpha="0.5"
        app:rippleOverlay="false"
        app:rippleHover="true"
        app:rippleDuration="350">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="15dip"
        android:paddingBottom="15dip">

        <TextView
            android:id="@+id/txtvLoinedTest"
            android:layout_marginLeft="16dip"
            android:layout_marginRight="16dip"
            android:text="다음 토익시험 날짜는"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/ThemeBlue"
            android:textSize="10dip"/>

    </LinearLayout>

    </com.balysv.materialripple.MaterialRippleLayout>

</android.support.v7.widget.CardView>