<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ThemeWhite">

    <android.support.v4.view.ViewPager
        android:id="@+id/vpagerToeicdate"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:id="@+id/layToeicdateYBMHome"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_gravity="bottom"
        android:background="@drawable/btn_toeicdate_internet"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/toeicdate_img_internet"/>

        <TextView
            android:layout_marginLeft="15dp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="YBM 홈페이지 열기"
            android:textColor="@color/ThemeWhite"
            android:textSize="18dp"/>

    </LinearLayout>

</FrameLayout>