<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dip"
    android:layout_marginLeft="10dip"
    android:layout_marginRight="10dip"
    app:cardCornerRadius="5dp"
    app:cardBackgroundColor="@color/ThemeWhite">

    <com.balysv.materialripple.MaterialRippleLayout
        android:id="@+id/ripplelayLoginedToeicDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:rippleColor="@color/ThemeBlack"
        app:rippleAlpha="0.5"
        app:rippleOverlay="false"
        app:rippleHover="true"
        app:rippleDuration="350">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="15dip"
        android:paddingBottom="15dip">

        <TextView
            android:id="@+id/txtvLoginedToeicdate1"
            android:layout_marginLeft="16dip"
            android:layout_marginRight="16dip"
            android:text="다음 토익시험 날짜는"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/ThemeBlue"
            android:textSize="25sp"/>

        <com.example.bang.toeichelper.customprogress.CircularProgress
            android:id="@+id/cprogressToeicDate"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            app:borderWidth="5dp"/>
        
        <TextView
            android:id="@+id/txtvLoginedToeicdate2"
            android:layout_marginLeft="16dip"
            android:layout_marginRight="16dip"
            android:text=""
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/ThemeBlue"
            android:gravity="right"
            android:textSize="30sp"/>

    </LinearLayout>

    </com.balysv.materialripple.MaterialRippleLayout>

</android.support.v7.widget.CardView>